extends layout

block head
    title RepositóriDOIS
    link(rel='stylesheet', href='/stylesheets/main.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/color.css')
    link(rel='stylesheet', href='/stylesheets/responsive.css')
    link(rel='icon', href='/img/favicon.png', type='image/png' sizes='16x16') 
    script(src='/javascript/main.min.js')
    script(src='/javascript/custom.js')
    script(src='/javascript/script.js')
    script(src='/javascript/recurso.js')
    script(src='/javascript/jszip.min.js')
    script(src='/javascript/crud.js')

block body
    .theme-layout
        .responsive-header
            .mh-head.first.Sticky
                span.mh-text
                    h3 RepositóriDOIS
            
        .topbar.stick
            .logo
                h3(style='margin-top: 12px')
                    a(href='/') RepositóriDOIS
            .top-area
                ul.main-menu
                ul.setting-area
                    li
                        a(href='', title='Search', data-ripple='')
                            i.ti-search
                            span.ripple
                                span.ink(style='height: 21px; width: 21px; background-color: rgb(217, 217, 217); top: -0.25px; left: 0.983337px;')
                        .searched
                            form.form-search
                                input(type="text", placeholder='Procurar Tag', name='tag')
                                button(data-ripple='', onclick='getRecursosByTag()')
                                    i.ti-search
                    li
                        h6
                            a(href='', title='Logout', onclick='logout()') Logout
        section
            .gap.gray-bg
                .container-fluid
                    .row
                        .col-lg-12
                            div(class='row', id='page-contents')
                                .col-lg-2
                                    aside(class='sidebar static')
                                        .widget
                                            h2.widget-title Tipos
                                            ul.naves
                                                each t in tipos
                                                    li
                                                        a(href='/recursos?tipo='+t._id, title='')= t._id
                                        .widget
                                            h2.widget-title Estrelas
                                            ul.naves
                                                li
                                                    i.ti-star
                                                    a(href="", onclick="star()")= recurso.stars

                                .col-lg-6
                                    .central-meta
                                        .about
                                            .personal
                                                h5.f-title= recurso.titulo
                                                p= recurso.subtitulo
                                                div(id="viewer")
                                                p
                                                    strong Autor: 
                                                    | #{recurso.autor}
                                                p
                                                    strong Data de Criação: 
                                                    | #{recurso.dataCriacao}
                                                p
                                                    strong Tags: 
                                                    each tag in recurso.tags
                                                        a(href='/recursos?tag='+tag) ##{tag} 
                                .col-lg-4
                                    aside(class='sidebar static')
                                        .widget
                                            h4.widget-title Perfil
                                            .your-page
                                                .page-meta
                                                    a(href='/utilizador/'+username, title='', class='underline', id="user_link")= nome
                                                    span
                                                        i.ti-email
                                                        a= email
                                                    span
                                                        i.ti-book
                                                        a= instituicao
                                    aside(class='sidebar static')
                                        .widget
                                            h4.widget-title Recursos
                                            ul.naves
                                                li
                                                    a(href='/recursos/novo', title='') Adicionar Recurso
                                                li
                                                    a(href='/recursos?username='+username, title='') Meus Recursos
                                    aside(class='sidebar static')
                                        .widget
                                            h4.widget-title Opções
                                            ul.naves
                                                li(id="descarregar")
                                                li(id="editar")
                                                li(id="apagar")
    
block footer
    .container
        .row
            .col-lg-4.col-md-4
                .widget
                    .foot-logo
                        .logo
                            h5(style='margin-top: 12px')
                                a(href='/') RepositóriDOIS
                        p RepositóriDOIS @ DAW2020
            .col-lg-2.col-md-4
                .widget
                    .widget-title
                        h4 Tipos
                    ul.list-style
                        li
                            a(href='/recursos?tipo='+tipos[0]._id, title='')= tipos[0]._id
                        li
                            a(href='/recursos?tipo='+tipos[1]._id, title='')= tipos[1]._id
                        li
                            a(href='/recursos?tipo='+tipos[2]._id, title='')= tipos[2]._id
            .col-lg-2.col-md-4
                .widget
                    .widget-title
                        h4 Links Úteis
                    ul.list-style
                        li
                            a(href='/recursos/', title='') Recursos
